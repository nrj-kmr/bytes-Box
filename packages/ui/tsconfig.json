{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "rootDir": "../../",
    "outDir": "dist",
    "composite": true,
    "incremental": true,
    "target": "ESNext",
    "moduleResolution": "node16",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}