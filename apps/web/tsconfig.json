{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "../../packages/ui"
    }
  ],
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "rootDir": "src",
